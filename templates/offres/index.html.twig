{% extends 'base.html.twig' %}

{% block title %}Offres d'emploi{% endblock %}

{% block body %}
<h1>Offres d'emploi</h1>

{% if jobs is empty %}
    <p>Aucune offre trouv√©e.</p>
{% else %}
    <div class="jobs-container" style="display:flex; flex-wrap: wrap; gap:20px;">
        {% for job in jobs %}
            <div class="job-card" style="border:1px solid #ccc; border-radius:8px; padding:1rem; width:calc(50% - 10px); box-shadow: 0 2px 6px rgba(0,0,0,0.1);">
                <h3 style="margin:0 0 0.5rem 0;">{{ job.title }}</h3>
                <p style="margin:0.25rem 0;"><strong>{{ job.company }}</strong></p>
                <p style="margin:0.25rem 0; font-size:0.9rem;">{{ job.location }}</p>
                <a href="{{ job.link }}" target="_blank" style="color:#3182ce; text-decoration:none;">Voir l'offre</a>
            </div>
        {% endfor %}
    </div>
{% endif %}
{% endblock %}
