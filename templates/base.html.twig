<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Gestion de Candidatures{% endblock %}</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Roboto:wght@400;500&display=swap" rel="stylesheet">
    <style>
        /* Global Styles */
        body {
            margin: 0;
            font-family: 'Inter', sans-serif;
            background-color: #f4f7fb;
            color: #333;
        }
        a {
            text-decoration: none;
            color: inherit;
        }
        .container {
            width: 100%;
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        /* Navbar */
        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #1e2a3a;
            color: white;
            padding: 15px 30px;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            max-width: 1200px;
            margin: 20px auto 0 auto;
            position: relative;
        }
        .navbar h1 {
            margin: 0;
            font-size: 1.8rem;
            font-weight: 600;
        }
        .navbar .menu-toggle {
            font-size: 1.8rem;
            cursor: pointer;
        }
        .navbar .user-links a {
            margin-left: 15px;
            font-weight: 500;
            color: #f1f1f1;
            transition: color 0.3s;
        }
        .navbar .user-links a:hover {
            color: #1abc9c;
        }

        /* Sidebar */
        .sidebar {
            position: fixed;
            top: 0;
            left: -250px;
            width: 250px;
            height: 100%;
            background-color: #34495e;
            color: white;
            padding-top: 60px;
            transition: 0.3s;
            border-radius: 0 8px 8px 0;
            box-shadow: 4px 0 6px rgba(0, 0, 0, 0.1);
            z-index: 1000;
        }
        .sidebar a {
            display: block;
            padding: 15px;
            text-decoration: none;
            color: white;
            font-size: 1.1rem;
            font-weight: 500;
            transition: background-color 0.3s;
        }
        .sidebar a:hover {
            background-color: #1abc9c;
        }
        .sidebar.active {
            left: 0;
        }
        .sidebar-toggle {
            position: absolute;
            top: 15px;
            left: 15px;
            font-size: 1.8rem;
            cursor: pointer;
            z-index: 1200;
        }

        /* Hero */
        .hero {
            background: linear-gradient(135deg, #1abc9c, #16a085);
            color: white;
            padding: 60px 20px 40px 20px;
            text-align: center;
            border-radius: 8px;
            margin: 40px auto;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            max-width: 1200px;
            position: relative;
        }
        .hero h1 {
            font-size: 2.2rem;
            font-weight: 700;
            margin-bottom: 15px;
        }
        .hero p {
            font-size: 1.1rem;
            max-width: 700px;
            margin: 0 auto 25px;
            line-height: 1.5;
        }
        .hero .button {
            background-color: white;
            color: #16a085;
            font-weight: 600;
            padding: 12px 30px;
            border-radius: 50px;
            text-decoration: none;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            transition: background-color 0.3s;
        }
        .hero .button:hover {
            background-color: #f1f1f1;
        }

        /* Content */
        .content {
            margin-left: 0;
            transition: margin-left 0.3s;
        }
        .content.active {
            margin-left: 250px;
        }

        /* Sections d’info */
        .features {
            display:flex;
            justify-content:center;
            gap:40px;
            flex-wrap:wrap;
            margin-top:30px;
            margin-bottom:40px;
        }
        .feature-card {
            text-align:center;
            width:250px;
        }
        .feature-card i {
            font-size:2rem;
            color:#1abc9c;
            margin-bottom:10px;
        }

        /* Footer */
        footer {
            text-align: center;
            padding: 20px 0;
            background-color: #2c3e50;
            color: white;
            font-size: 0.9rem;
            width: 100%;
            position: relative;
            margin-top: 40px;
        }
    </style>
</head>
<body>
{% set current_route = app.request.attributes.get('_route') %}

{% if current_route not in ['app_login', 'app_register'] %}
    <!-- Navbar -->
    <div class="navbar">
        <span class="menu-toggle"><i class="fas fa-bars"></i></span>
        <h1>Gestion des candidatures</h1>
        <div class="user-links">
            {% if app.user %}
                <a href="{{ path('app_logout') }}">Déconnexion</a>
            {% endif %}
            {% if not app.user %}
                <a href="{{ path('app_login') }}">Connexion</a>
                <a href="{{ path('app_register') }}">Inscription</a>
            {% endif %}
        </div>

    </div>

    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <span class="sidebar-toggle"><i class="fas fa-bars"></i></span>
        <a href="{{ path('app_home') }}">Tableau de bord</a>
        <a href="{{ path('app_offres') }}">Offres d'emploi</a>
    </div>

   {% if app.user %}
    

   
{% endif %}


{% endif %}

<div class="container">
    {% block body %}{% endblock %}
</div>

{% if current_route not in ['app_login', 'app_register'] %}
<footer>
    <p>&copy; 2025 Gestion d'Alternances. Tous droits réservés.</p>
    <div>
        <a href="#"><i class="fab fa-facebook-f"></i></a>
        <a href="#"><i class="fab fa-twitter"></i></a>
        <a href="#"><i class="fab fa-linkedin-in"></i></a>
    </div>
</footer>
{% endif %}

<script>
    const toggleMain = document.querySelector(".menu-toggle");
    const toggleSidebar = document.querySelector(".sidebar-toggle");
    const sidebar = document.getElementById("sidebar");
    const content = document.querySelector(".content");

    if(toggleMain && toggleSidebar) {
        function toggleMenu() {
            sidebar.classList.toggle("active");
            if(content) content.classList.toggle("active");
        }
        toggleMain.addEventListener("click", toggleMenu);
        toggleSidebar.addEventListener("click", toggleMenu);
    }
</script>
</body>
</html>
